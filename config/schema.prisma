datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          BigInt      @id @default(autoincrement()) @map("id_user")
    name        String
    email       String      @unique
    password    String
    avatarUrl   String?
    categories  Category[]
    @@map(name: "user")
}

model Category {
    id                BigInt     @id @default(autoincrement()) @map("id_category")
    user              User       @relation(fields: [userId], references: [id])
    userId            BigInt     @map("id_user")
    parentCategoryId  BigInt?    @map("id_parent_category")
    parentCategory    Category?  @relation("Subcategories", fields: [parentCategoryId], references: [id])
    subCategories     Category[] @relation("Subcategories")
    name              String
    type              Int        @db.SmallInt
    iconId            String     @map("id_icon")
    color             String
    @@map("category")
}